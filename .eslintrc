{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "worker": true,
    "mocha": true
  },
  "globals": {
    "window": true,
    "define": true
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "curly": 1,
    "eqeqeq": 2,
    "no-console": 0,
    "new-cap": 2,
    "strict": 0,
    "no-underscore-dangle": 1,
    "quotes": [
      "error",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "jsx-quotes": 2,
    "array-callback-return": 2,
    "dot-notation": 2,
    "no-alert": 1,
    "no-eq-null": 2,
    "no-empty": 2,
    "no-ternary": 1,
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1
      }
    ],
    "no-duplicate-imports": 2,
    "no-empty-function": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-floating-decimal": 2,
    "no-invalid-this": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-spaces": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-param-reassign": 2,
    "no-proto": 1,
    "no-redeclare": 2,
    "no-script-url": 2,
    "no-self-assign": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unused-expressions": 1,
    "no-void": 2,
    "yoda": 2,
    "no-shadow": 1,
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "after-used"
      }
    ],
    "no-use-before-define": 1,
    "array-bracket-spacing": [
      2,
      "never"
    ],
    "camelcase": [
      2,
      {
        "properties": "always"
      }
    ],
    "brace-style": 2,
    "quote-props": [
      "error",
      "as-needed",
      {
        "keywords": true
      }
    ],
    "comma-spacing": [
      2,
      {
        "before": false,
        "after": true
      }
    ],
    "comma-style": [
      2,
      "last"
    ],
    "eol-last": 2,
    "key-spacing": [
      2,
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "keyword-spacing": [
      2,
      {
        "overrides": {
          "for": {
            "after": true
          }
        }
      }
    ],
    "no-trailing-spaces": 2,
    "linebreak-style": [
      2,
      "unix"
    ],
    "new-parens": 2,
    "no-confusing-arrow": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "prefer-template": 1,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/jsx-no-undef": 2
  }
}
